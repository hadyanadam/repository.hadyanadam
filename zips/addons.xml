<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.hadyanadam.hotstar" name="Disney+ Hotstar" provider-name="hadyanadam" version="0.0.3">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.codequick" version="0.9.10"/>
        <import addon="script.module.inputstreamhelper" version="0.4.5"/>
        <import addon="repository.hadyanadam" version="1.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Stream Disney+ Hotstar Content In Kodi.</summary>
        <description lang="en_GB">Disney+ Hotstar (Hotstar) in Indonesia</description>
        <disclaimer lang="en_GB">This plugin is Indonesian version of botallen.hotstar plugin and not officially commissioned/supported by Hotstar. The trademark "Hotstar" is registered by "Novi Digital Entertainment Private Limited (Novi)"</disclaimer>
        <license>MIT</license>
        <source>https://github.com/hadyanadam/repository.hadyanadam/tree/master/plugin.video.hadyanadam.hotstar</source>
        <website></website>
        <email>hadyanadamn@gmail.com</email>
        <platform>all</platform>
        <language>en</language>
        <assets>
            <icon>resources/icon.jpg</icon>
            <fanart>resources/fanart.png</fanart>
            <screenshot>resources/screenshots/screenshot000.png</screenshot>
            <screenshot>resources/screenshots/screenshot001.png</screenshot>
            <screenshot>resources/screenshots/screenshot002.png</screenshot>
        </assets>
        <reuselanguageinvoker>true</reuselanguageinvoker>
    </extension>
</addon>

<addon id="repository.hadyanadam" name="Hadyanadam Repository" version="1.0.0" provider-name="hadyanadam">
    <extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/hadyanadam/repository.hadyanadam/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/hadyanadam/repository.hadyanadam/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/hadyanadam/repository.hadyanadam/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Hadyanadam Repository</summary>
        <description>Hadyanadam Repository</description>
        <disclaimer>Unofficial Kodi Repo</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
